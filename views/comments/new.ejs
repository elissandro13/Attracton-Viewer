<% include ../partials/header %>


<div class="container">
    <div class="row">
            <h1 style="text-align: center">Create a new Comment to <%= place.name %></h1>
            <div style="width: 30%; margin: 0 auto;">
                <form action="/attractions/<%= place._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="text">
                    </div>
                    <button class="btn btn-large btn-primary btn-block">Submit!</button>
                </form>
            <a href="/attractions">Go back</a>
        </div>
    </div>
</div>


