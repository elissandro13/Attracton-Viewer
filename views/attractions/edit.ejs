<% include ../partials/header %>


<div class="container">
    <div class="row">
            <h1 style="text-align: center">Create a new Attractions</h1>
            <div style="width: 30%; margin: 0 auto;">
                <form action="/attractions/<%= place._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="attraction[name]" value="<%= place.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="attraction[img]" value="<%= place.img %>">
                    </div>
                    <div class="form-group">
                            <input class="form-control" type="text" name="attraction[description]" value="<%= place.text %>">
                        </div>
                    <button class="btn btn-large btn-primary btn-block">Submit!</button>
                </form>
            <a href="/attractions">Go back</a>
        </div>
    </div>
</div>


<% include ../partials/footer %>
